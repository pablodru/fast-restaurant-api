// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  image       String
  description String
  price       Int
  category    Categories
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Order       Order[]
}

model Additional {
  name        String
  description String
  price       Int
  image       String
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Order       Order[]
}

model Order {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  productId    Int
  observation  String?
  additionalId Int?
  isClosed     Boolean
  costumer     String
  Additional   Additional? @relation(fields: [additionalId], references: [id])
  Product      Product     @relation(fields: [productId], references: [id])
}

enum Categories {
  COMBO
  SIDE
  DRINK
  DESSERT
}

enum PaymentModes {
  CREDIT
  DEBIT
  CASH
}
